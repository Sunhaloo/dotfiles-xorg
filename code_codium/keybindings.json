[
    // use <Ctrl>+E to open up sidebar
    {
        "key": "ctrl+e",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // opens Sidebar and focuses on Sidebar
    {
        "key": "ctrl+e",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "editorTextFocus"

    },
    // creates new file with <n> Sidebar is opened
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"

    },
    // rename file with <r> Sidebar is opened
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"

    },
    // delete file with <d> Sidebar is opened
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"

    },
]